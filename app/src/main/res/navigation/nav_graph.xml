            android:id="@+id/action_gainWeightFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/highIntensityFragment"
        android:name="com.example.fitnesss.screens.workouts.HighIntensityFragment"
        android:label="fragment_high_intensity"
        tools:layout="@layout/fragment_high_intensity" >
        <action
            android:id="@+id/action_highIntensityFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
        <action
            android:id="@+id/action_highIntensityFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment" />
        <action
            android:id="@+id/action_highIntensityFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.example.fitnesss.screens.CalculatorFragment"
        android:label="fragment_calculator"
        tools:layout="@layout/fragment_calculator" >
        <action
            android:id="@+id/action_calculatorFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.fitnesss.screens.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_loseWeightFragment"
            app:destination="@id/loseWeightFragment" />
        <action
            android:id="@+id/action_detailFragment_to_goodShapeFragment"
            app:destination="@id/goodShapeFragment" />
        <action
            android:id="@+id/action_detailFragment_to_gainWeightFragment"
            app:destination="@id/gainWeightFragment" />
        <action
            android:id="@+id/action_detailFragment_to_highIntensityFragment"
            app:destination="@id/highIntensityFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.fitnesss.screens.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
