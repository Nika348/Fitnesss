<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/libraryFragment">

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.fitnesss.screens.library.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library" >
        <action
            android:id="@+id/action_libraryFragment_to_loseWeightFragment"
            app:destination="@id/loseWeightFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_goodShapeFragment"
            app:destination="@id/goodShapeFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_gainWeightFragment"
            app:destination="@id/gainWeightFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_highIntensityFragment"
            app:destination="@id/highIntensityFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
    </fragment>
    <fragment
        android:id="@+id/loseWeightFragment"
        android:name="com.example.fitnesss.screens.workouts.LoseWeightFragment"
        android:label="fragment_lose_weight"
        tools:layout="@layout/fragment_lose_weight" >
        <action
            android:id="@+id/action_loseWeightFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
        <action
            android:id="@+id/action_loseWeightFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment" />
        <action
            android:id="@+id/action_loseWeightFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/goodShapeFragment"
        android:name="com.example.fitnesss.screens.workouts.GoodShapeFragment"
        android:label="fragment_good_shape"
