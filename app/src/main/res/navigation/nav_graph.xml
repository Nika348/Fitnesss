            android:id="@+id/action_goodShapeFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment" />
        <action
            android:id="@+id/action_goodShapeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/gainWeightFragment"
        android:name="com.example.fitnesss.screens.workouts.GainWeightFragment"
        android:label="fragment_gain_weight"
        tools:layout="@layout/fragment_gain_weight" >
