<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_light"
    tools:context=".screens.workouts.WorkoutsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_workouts"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="Тренировки"
        app:titleTextColor="@color/white"
        app:titleCentered="true"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        android:paddingStart="8dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_workouts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_workouts"
        tools:itemCount="3"
        tools:listitem="@layout/item_workouts"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>